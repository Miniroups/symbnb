{% set url = path('ads_show', {'slug': ad.slug}) %}
<div class="col-md-4 adsCard">
    <div class="card bg-light mb-3">
        <div class="card-header text-center">
            {{ ad.rooms }} chambres, <strong>{{ ad.price }}&euro; / nuit</strong>
        </div>
    </div>

    <a href="{{ url }}">
        <img src="{{ ad.coverImage }}" alt="Image de l'appartement"
            style="height: 200px; width:100%; display: block">
    </a>

    <div class="card-body">
        <h4 class="card-title">
            <a href="{{ url }}">
                {{ ad.title }}
            </a>
        </h4>
        <p class="card-text">
            {{ ad.introduction }}
        </p>
        {% if app.user and app.user == ad.author %}
        <a href="{{ path('ads_edit', {'slug': ad.slug}) }}" class="btn btn-secondary">Modifier l'annonce</a>
        <a href="{{ path('ads_delete', {'slug': ad.slug}) }}" class="btn btn-danger" onclick="return confirm(`ÃŠtes vous sur de vouloir supprimer l'annonce : {{ad.title}} ?`)">Supprimer l'annonce</a>
        {% endif %}
        <a href="{{ url }}" class="btn btn-info">En savoir plus</a>
    </div>
</div>